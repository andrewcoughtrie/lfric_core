!> Test the initial rho computation
!>
module compute_total_mass_kernel_mod_test

  implicit none 


contains

  @test
  subroutine compute_total_mass_kernel_test()

    use pFUnit_Mod
    use function_space_build_mod,   only : fs_build, fs_destroy
    use field_mod,                  only : field_type,      &
                                           field_proxy_type
    use function_space_mod,         only : function_space_type, W0, W3
    use compute_total_mass_kernel_mod,    only : compute_total_mass_code
    use slush_mod,                  only : l_spherical
    use constants_mod,              only : r_def, earth_radius, PLANE_BI_PERIODIC
    use quadrature_mod,             only : quadrature_type, QR3
    use mesh_mod,                   only : mesh_type


   implicit none
    type(field_type) :: chi(3)

    ! Information for testing initial rho
    type(field_type)          :: rho, mass
    type(field_proxy_type)    :: rho_p, mass_p
    type(field_proxy_type )   :: chi_p(3) 
    type(function_space_type) :: fs
    type( quadrature_type), pointer :: qr => null()
    type(mesh_type)  :: mesh

    integer          :: ndf_rho, undf_rho, dim_rho, &
                        ndf_chi, undf_chi, dim_diff_chi, &
                        nqp_h, nqp_v, nlayers


    integer, pointer :: map_rho(:) => null(), &
                        map_chi(:) => null()

    real(kind=r_def), pointer :: xp(:,:) => null()
    real(kind=r_def), pointer :: zp(:)   => null()
    real(kind=r_def), pointer :: wh(:), wv(:) => null()  

        
    real(kind=r_def), dimension(:,:,:,:), allocatable :: &
                                          basis_rho, &
                                          diff_basis_chi  
    real(kind=r_def) :: tol, answer

    integer :: i, j, k, cell
    
    tol = 1.0e-6_r_def  
    l_spherical = .false.
    qr => qr%get_instance(QR3,9,3)

    ! Dummy mesh mod has 9 cells, 3 layers
    mesh = mesh_type(PLANE_BI_PERIODIC)

    ! build some function spaces ...
    call fs_build(mesh)
    
    ! make a coordinate field with a function space
    do i = 1,3
      chi(i) = field_type( vector_space = fs%get_instance( mesh, W0 ) )
      chi_p(i) = chi(i)%get_proxy()
    end do
    ! Compute coordinates
    cell = 1
    do j = 1,3
      do i = 1,3
        map_chi => chi_p(1)%vspace%get_cell_dofmap( cell ) 
        do k = 0,3
          chi_p(1)%data(map_chi(1) + k) = real(i-1)*6000.0_r_def
          chi_p(2)%data(map_chi(1) + k) = real(j-1)*2000.0_r_def
          chi_p(3)%data(map_chi(1) + k) = real(k)  *2000.0_r_def
        end do
        cell = cell + 1
      end do
    end do

    ! Test mass kernel
    rho = field_type(  vector_space = fs%get_instance( mesh, W3 ) )
    rho_p = rho%get_proxy()
    mass = field_type(  vector_space = fs%get_instance( mesh, W3 ) )
    mass_p = mass%get_proxy()


    ndf_rho  = rho_p%vspace%get_ndf( )
    undf_rho = rho_p%vspace%get_undf( )
    dim_rho  = rho_p%vspace%get_dim_space( ) 

    ndf_chi  = chi_p(1)%vspace%get_ndf( )
    undf_chi = chi_p(1)%vspace%get_undf( )
    dim_diff_chi  = chi_p(1)%vspace%get_dim_space_diff( ) 


    nqp_h=qr%get_nqp_h()
    nqp_v=qr%get_nqp_v()
    zp=>qr%get_xqp_v()
    xp=>qr%get_xqp_h()
    wh=>qr%get_wqp_h()
    wv=>qr%get_wqp_v()

    allocate( basis_rho(dim_rho, ndf_rho, nqp_h, nqp_v), &
              diff_basis_chi(dim_diff_chi, ndf_chi, nqp_h, nqp_v))         
 
    call rho_p%vspace%compute_basis_function( &
         basis_rho, ndf_rho, nqp_h, nqp_v, xp, zp)
   
    call chi_p(1)%vspace%compute_diff_basis_function( &
         diff_basis_chi, ndf_chi, nqp_h, nqp_v, xp, zp)
         
    cell = 1
    map_rho => rho_p%vspace%get_cell_dofmap( cell )
    map_chi => chi_p(1)%vspace%get_cell_dofmap( cell )
    nlayers = rho_p%vspace%get_nlayers()
    rho_p%data(:) = 2.0_r_def
    mass_p%data(:) = 0.0_r_def
    call compute_total_mass_code(                                   &
                                 nlayers,                           &
                                 mass_p%data,                       &
                                 rho_p%data,                        &
                                 chi_p(1)%data,                     &
                                 chi_p(2)%data,                     &
                                 chi_p(3)%data,                     &
                                 ndf_rho, undf_rho,                 &
                                 map_rho,                           &
                                 basis_rho,                         &
                                 ndf_chi, undf_chi,                 &
                                 map_chi,                           &
                                 diff_basis_chi,                    &
                                 nqp_h, nqp_v,                      &
                                 wh, wv)    

    deallocate( basis_rho, diff_basis_chi )

    answer = 6000_r_def*2000_r_def*2000_r_def*rho_p%data(1)/earth_radius**2
    @assertEqual(answer, mass_p%data(map_rho(1)), tol)

    !tear down ...
    call fs_destroy()
  
  end subroutine compute_total_mass_kernel_test

end module compute_total_mass_kernel_mod_test
