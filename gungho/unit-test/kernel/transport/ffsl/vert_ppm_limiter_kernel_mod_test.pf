!> This code tests PPM with limiter in the vertical.

module vert_ppm_limiter_kernel_mod_test

  use constants_mod, only : i_def, r_tran, str_long, l_def
  use pFUnit_Mod

  implicit none

  private
  public :: test_all

  @TestCase
  type, public, extends(TestCase) :: vert_ppm_limiter_test_type
    private
  contains
    procedure test_all
  end type vert_ppm_limiter_test_type

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_all( this )

    use, intrinsic :: iso_fortran_env,      only : real64
    use vert_ppm_limiter_kernel_mod,        only : vert_ppm_limiter_code
    use vert_ppm_strict_limiter_kernel_mod, only : vert_ppm_strict_limiter_code

    implicit none

    class(vert_ppm_limiter_test_type), intent(inout) :: this

    real(r_tran),   parameter :: tol       = 1.0e-12_r_tran   ! r_tran 64bit
    integer(i_def), parameter :: nlayers   = 5
    integer(i_def), parameter :: undf_w3   = 5
    integer(i_def), parameter :: ndf_w3    = 1
    integer(i_def), parameter :: map_w3(1) = 1
    logical(l_def), parameter :: log_space = .false.

    real(r_tran) :: rho(5)
    real(r_tran) :: dz(5)
    real(r_tran) :: answer_level0(1:3)
    real(r_tran) :: answer_level1(1:3)
    real(r_tran) :: answer_level2(1:3)
    real(r_tran) :: answer_level3(1:3)
    real(r_tran) :: answer_level4(1:3)

    real(r_tran)     :: use_tol

    real(kind=r_tran) :: a0(1:nlayers)
    real(kind=r_tran) :: a1(1:nlayers)
    real(kind=r_tran) :: a2(1:nlayers)

    ! Test with constant grid spacing and strict monotonicity

    rho = (/ 1.0_r_tran, 2.0_r_tran, 3.0_r_tran, 4.0_r_tran, 5.0_r_tran /)
    dz  = (/ 1.0_r_tran, 1.0_r_tran, 1.0_r_tran, 1.0_r_tran, 1.0_r_tran /)
    answer_level0 = (/ 1.0_r_tran, 0.0_r_tran, 0.0_r_tran /)
    answer_level1 = (/ 1.5_r_tran, 1.0_r_tran, 0.0_r_tran /)
    answer_level2 = (/ 2.5_r_tran, 1.0_r_tran, 0.0_r_tran /)
    answer_level3 = (/ 3.5_r_tran, 1.0_r_tran, 0.0_r_tran /)
    answer_level4 = (/ 5.0_r_tran, 0.0_r_tran, 0.0_r_tran /)

    call vert_ppm_strict_limiter_code( nlayers,   &
                                       a0,        &
                                       a1,        &
                                       a2,        &
                                       rho,       &
                                       dz,        &
                                       log_space, &
                                       ndf_w3,    &
                                       undf_w3,   &
                                       map_w3 )

    if ( r_tran == real64 ) then
      use_tol = tol
    else
      ! Increase tolerance due to normalising dz in vert_ppm code
      use_tol = 1000.0_r_tran*spacing( maxval( (/ a0, a1, a2 /) ) )
    endif

    @assertEqual( answer_level0(1), a0(1), use_tol)
    @assertEqual( answer_level0(2), a1(1), use_tol)
    @assertEqual( answer_level0(3), a2(1), use_tol)

    @assertEqual( answer_level1(1), a0(2), use_tol)
    @assertEqual( answer_level1(2), a1(2), use_tol)
    @assertEqual( answer_level1(3), a2(2), use_tol)

    @assertEqual( answer_level2(1), a0(3), use_tol)
    @assertEqual( answer_level2(2), a1(3), use_tol)
    @assertEqual( answer_level2(3), a2(3), use_tol)

    @assertEqual( answer_level3(1), a0(4), use_tol)
    @assertEqual( answer_level3(2), a1(4), use_tol)
    @assertEqual( answer_level3(3), a2(4), use_tol)

    @assertEqual( answer_level4(1), a0(5), use_tol)
    @assertEqual( answer_level4(2), a1(5), use_tol)
    @assertEqual( answer_level4(3), a2(5), use_tol)

    ! Test with variable grid spacing and relaxed monotonicity

    rho = (/ 1.0_r_tran, 4.0_r_tran, 9.0_r_tran, 16.0_r_tran, 25.0_r_tran /)
    dz  = (/ 1.0_r_tran, 2.0_r_tran, 3.0_r_tran,  4.0_r_tran,  5.0_r_tran /)
    answer_level0 = (/  1.0_r_tran,  0.0_r_tran, 0.0_r_tran /)
    answer_level1 = (/  2.0_r_tran,  4.0_r_tran, 0.0_r_tran /)
    answer_level2 = (/  6.0_r_tran,  6.0_r_tran, 0.0_r_tran /)
    answer_level3 = (/ 12.0_r_tran,  8.0_r_tran, 0.0_r_tran /)
    answer_level4 = (/ 25.0_r_tran,  0.0_r_tran, 0.0_r_tran /)

    call vert_ppm_limiter_code( nlayers,   &
                                a0,        &
                                a1,        &
                                a2,        &
                                rho,       &
                                dz,        &
                                log_space, &
                                ndf_w3,    &
                                undf_w3,   &
                                map_w3 )

    if ( r_tran == real64 ) then
      use_tol = tol
    else
      ! Increase tolerance due to normalising dz in vert_ppm code
      use_tol = 1000.0_r_tran*spacing( maxval( (/ a0, a1, a2 /) ) )
    endif

    @assertEqual( answer_level0(1), a0(1), use_tol)
    @assertEqual( answer_level0(2), a1(1), use_tol)
    @assertEqual( answer_level0(3), a2(1), use_tol)

    @assertEqual( answer_level1(1), a0(2), use_tol)
    @assertEqual( answer_level1(2), a1(2), use_tol)
    @assertEqual( answer_level1(3), a2(2), use_tol)

    @assertEqual( answer_level2(1), a0(3), use_tol)
    @assertEqual( answer_level2(2), a1(3), use_tol)
    @assertEqual( answer_level2(3), a2(3), use_tol)

    @assertEqual( answer_level3(1), a0(4), use_tol)
    @assertEqual( answer_level3(2), a1(4), use_tol)
    @assertEqual( answer_level3(3), a2(4), use_tol)

    @assertEqual( answer_level4(1), a0(5), use_tol)
    @assertEqual( answer_level4(2), a1(5), use_tol)
    @assertEqual( answer_level4(3), a2(5), use_tol)

  end subroutine test_all

end module vert_ppm_limiter_kernel_mod_test
